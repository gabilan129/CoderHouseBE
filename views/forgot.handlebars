<div>

    <title>Restablecer contraseña</title>

  <div style="background-color: #f2f2f2; font-family: Arial, sans-serif; font-size: 16px;">
    <h1 style="text-align: center; color: #c63c3c;">Restablecer contraseña</h1>
    {{#if message}}
      <div style="text-align: center; margin-top: 20px; color: #c63c3c;">{{message}}</div>
    {{else}}
      <form method="post" action="/forgot" style="margin-top: 20px; text-align: center;">
        <label for="email" style="display: block; margin-bottom: 10px;">Correo electrónico:</label>
        <input type="email" id="email" name="email" required style="padding: 5px; border-radius: 3px; border: 1px solid #ccc; width: 300px; max-width: 100%; margin-bottom: 10px;">
        <br>
        <button  type="submit" style="background-color: #c63c3c; color: #fff; border: none; padding: 10px 20px; border-radius: 3px; cursor: pointer;">Enviar</button>
      </form>
    {{/if}}
  </div>
</div>
