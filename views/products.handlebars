    <style>
    nav {
        background-color: #c63c3c;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
</style>

<div style="display: flex; flex-direction: column; align-items: center;">


    <div id="productsConteiner" style="margin: 20px;">
        <h1 style="text-align: center; color: #333;">Lista de productos</h1>
        <div>
            <div id="messageDiv" style="background-color: #ffe4e4; border: 1px solid #ffa5a5; border-radius: 4px; color: #c63c3c; margin: 10px auto; max-width: 600px; padding: 10px; text-align: center;"></div>
    {{#each products}}
    <div style="margin: 20px; max-width: 600px; border: 1px solid #eee; padding: 10px; border-radius: 4px;">
        <h2 style="font-size: 24px; margin: 0; padding: 0;">{{this.title}}</h2>
        <div style="margin-top: 10px; display: flex; align-items: center;">
            <label for="productQuantity" style="font-weight: bold; margin-right: 10px;">Cantidad:</label>
            <input type="number" id="productQuantity" class="productQuantity" min="1" value="1" style="border: 1px solid #333; border-radius: 4px; padding: 5px; width: 80px;">
            <button class="productQuantityButton addToCartButton" data-product-id="{{this._id}}" style="background-color: #c63c3c; color: #fff; border: none; padding: 5px 10px; cursor: pointer; border-radius: 4px; margin-left: 10px;">Agregar al carrito</button>

            <button class="showDetailsButton" style="background-color: #c63c3c; color: #fff; border: none; padding: 5px 10px; cursor: pointer; border-radius: 4px; margin-left: 10px;">Ver detalles</button>
        </div>
        <div class="detailsContainer" style="display: none;">
            <h2 style="font-size: 24px; margin: 0; padding: 0;">{{this.description}}</h2>
            <h2 style="font-size: 24px; margin: 0; padding: 0;">{{this.category}}</h2>
            <h2 style="font-size: 24px; margin: 0; padding: 0;">Precio: ${{this.price}}</h2>
        </div>
    </div>
{{/each}}

        </div>
        </div>
        {{#if products.pagination.active}}
    <nav>
        <ul class="pagination" style="display: flex; justify-content: center; list-style: none; padding: 0; margin-top: 20px;">
            <li class="page-item">
                <a class="page-link" href="{{products.pagination.prevLink}}" aria-label="Previous" style="color: #333;">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each products.pagination.pagesLinks}}
                <li class="page-item">
                    <a class="page-link{{#if active}} active {{/if}}" href="{{link}}" style="color: #333;">{{page}}</a>
                </li>
            {{/each}}
            <li class="page-item">
                <a class="page-link" href="{{products.pagination.nextLink}}" aria-label="Next" style="color: #333;">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{{/if}}
</div>

<button id="logout" style="margin-bottom: 20px; background-color: #333; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; font-size: 16px; cursor: pointer;">Logout</button>
</div>
<script src="logout.js" type="application/javascript"></script>
<script src="products.js" type="application/javascript"></script>
